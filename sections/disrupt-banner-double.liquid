<div class="disrupt-double-banner">

  <div class="disrupt-double-banner__wrapper">

    <div class="double-banner_left pd-t-49-l-90">
      <picture style="position:absolute; top:0; left:0; width:100%; height:100%; z-index: 1">
        <source media="(max-width:750px)" srcset="{{section.settings.image_mobile | image_url}}">
        <img src="{{section.settings.image_desktop | image_url}}" style="width: 100%; z-index: 1">
      </picture>

      <div class="tp-d-banner-header only-mb" style="z-index: 5; position:relative">
        {{section.settings.header}}
      </div>
      
    </div>

    <div class="double-banner_right pd-t-162-l-90">
      <picture style="position:absolute; top:0; left:0; width:100%; height:100%; z-index: 1">
        <source media="(max-width:750px)" srcset="{{section.settings.image_mobile_right | image_url}}">
        <img src="{{section.settings.image_desktop_right | image_url}}" style="width: 100%; z-index: 1">
      </picture>
      <div class="double-banner-right-text_wrapper" style="z-index: 5;">
        <div class="tp-d-banner-header only-dsk">
          {{section.settings.header}}
        </div>
        <div class="tp-d-banner-body">
          {{section.settings.body}}
        </div>
        <div class="link-container">
          <a class="tp-d-banner-cta" href="#">
            {{section.settings.cta}}
          </a>
        </div>
      </div>
     
    </div>
  </div>

</div>

<style>
  .disrupt-double-banner {
    width: 100%;
    height: 62.5vw;;
  }

  .disrupt-double-banner__wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .double-banner_right, .double-banner_left {
    position: relative;
    width: 50%;
    height: 100%;
  }


  .link-container {
    margin-top: 42px;
  }

  .double-banner-right-text_wrapper {
    position: relative;
  }

  
  .tp-d-banner-header {
    text-align: left;
    font-size: 100px;
    line-height: 110px;
    letter-spacing: 0px;
    color: #13613E;
    opacity: 1;
  }
  .tp-d-banner-body {
    text-align: left;
    font-size: 30px;
    line-height: 1.2;
    letter-spacing: 0px;
    color: #13613E;
    text-transform: uppercase;
    opacity: 1;
    margin-top: 402px;
  }
  .tp-d-banner-cta {
    text-align: center;
    font-size: 25px;
    line-height: 1.2;
    letter-spacing: 2.5px;
    color: #13613E;
    text-transform: uppercase;
    opacity: 1;
    border-bottom: 1px solid #13613E;
  }

  .pd-t-162-l-90 {
    padding-top: 162px;
    padding-left: 90px;
  }

  @media(max-width: 750px) {
    .only-dsk {
      display: none !important;
    }

    .disrupt-double-banner {
      height: 202vw;
    }

    .disrupt-double-banner__wrapper {
      flex-direction: column-reverse;
    }

    .double-banner_right {
      width: 100%;
      height: 47%;
    }

    .double-banner_left {
      width: 100%;
      height: 53%;
    }

    .pd-t-162-l-90 {
      display: flex;
      align-items: center;
      padding-left: 20px;
      padding-right: 20px;
      padding-top: 0;
    }

    .pd-t-49-l-90 {
      padding-left: 20px;
      padding-right: 20px;
      padding-bottom: 49px;
      align-items: end;
      display: flex;
    }

    .tp-d-banner-header {
      text-align: left;
      font-size: 40px;
      line-height: 45px;
      letter-spacing: 0px;
      color: white;
      opacity: 1;
    }
    .tp-d-banner-body {
      text-align: left;
      font-size: 12px;
      line-height: 20px;
      letter-spacing: 0px;
      color: #13613E;
      text-transform: uppercase;
      opacity: 1;
      margin-top: 0;
    }
    .tp-d-banner-cta {
      width: 150px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      font-size: 12px;
      line-height: 48px;
      letter-spacing: 2.5px;
      color: white !important;
      text-transform: unset;
      opacity: 1;
      border-bottom: unset;
      border: 1px solid white;
    }

    .link-container {
      margin-top: 191px;
    }
  }

  @media(min-width: 750px) {
    .only-mb {
      display: none !important;
    }
  }
</style>
{% schema %}
  {
    "name": "Disrupt double banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Media Content"
      },
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop image left container"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile image left container",
        "info": "Leave it blank if no need to show different mobile image."
      },
      {
        "type": "header",
        "content": "Media Content"
      },
      {
        "type": "image_picker",
        "id": "image_desktop_right",
        "label": "Desktop image right container"
      },
      {
        "type": "image_picker",
        "id": "image_mobile_right",
        "label": "Mobile image right container",
        "info": "Leave it blank if no need to show different mobile image."
      },
      {
        "type": "header",
        "content": "Text settings"
      },
      {
        "type": "text",
        "id": "header",
        "label": "Header",
        "default": "Redefining Anti-aging. We’re “Well-aging”"
      },
      {
        "type": "text",
        "id": "body",
        "label": "Body",
        "default": "NATURAL FORMULA WITH TECHNOLOGY FOR ADVANCED WELL-AGING."
      },
      {
        "type": "text",
        "id": "cta",
        "label": "CTA",
        "default": "ABOUT US"
      },
      {
        "type": "url",
        "id": "link",
        "label": "CTA Link"
      },
      {
        "type": "header",
        "content": "Media banner settings"
      },
      {
        "type": "select",
        "id": "inner_padding_left_right",
        "options": [
          {
            "value": "none",
            "label": "none"
          },
          {
            "value": "185",
            "label": "185"
          },
          {
            "value": "20",
            "label": "20"
          }
        ],
        "default": "185",
        "label": "Inner padding left and right"
      },
      {
        "type": "select",
        "id": "inner_padding_bottom",
        "options": [
          {
            "value": "none",
            "label": "none"
          },
          {
            "value": "166",
            "label": "166"
          }
        ],
        "default": "166",
        "label": "Inner padding bottom"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "type": "select",
        "id": "content_alignment_horizontal",
        "options": [
          {
            "value": "left",
            "label": "left"
          },
          {
            "value": "center",
            "label": "center"
          },
          {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left",
        "label": "Content alignment(horizontal)"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "options": [
          {
            "value": "left",
            "label": "left"
          },
          {
            "value": "center",
            "label": "center"
          },
          {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left",
        "label": "Text alignment"
      },
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "select",
        "id": "section_spacing",
        "options": [
          {
            "value": "none",
            "label": "none"
          },
          {
            "value": "150",
            "label": "150"
          },
          {
            "value": "60",
            "label": "60"
          }
        ],
        "default": "150",
        "label": "Spacing between sections"
      },
      {
        "type": "header",
        "content": "Section page width size"
      },
      {
        "type": "select",
        "id": "media_width_size",
        "options": [
          {
            "value": "full",
            "label": "Full"
          },
          {
            "value": "960",
            "label": "960"
          },
          {
            "value": "1200",
            "label": "1200"
          }
        ],
        "default": "full",
        "label": "Media part width size"
      },
      {
        "type": "select",
        "id": "text_width_size",
        "options": [
          {
            "value": "full",
            "label": "Full"
          },
          {
            "value": "960",
            "label": "960"
          },
          {
            "value": "1200",
            "label": "1200"
          }
        ],
        "default": "960",
        "label": "Text part width size"
      }
    ],
    "presets": [
      {
        "name": "Disrupt double banner"
      }
    ]
  }
  {% endschema %}