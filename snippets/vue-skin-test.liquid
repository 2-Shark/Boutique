      step(after, before) {
        scrollTo(0, 0);
      },

      status(after, before) {
        scrollTo(0, 0);
      }
    },
    methods: {
      getItems() {
        {% comment %} let collections = {{ collections["accessories"].products | json }};

        let accItems = collections.reduce((prev, current) => {
          return [
            ...prev,
            ...this.formatProduct(current)
          ]
        }, []); {% endcomment %}
      },
      select(index) {
        if (this.step < this.lists.length) {
          this.choose[this.step].answer = this.currentListAnswer[index];
        }
        
        this.next();
      },
      next() {
        if (this.status == "start") {
          this.status = "play";
          return;
        }

        if (this.status == "play" && this.step >= this.lists.length - 1) {
          this.status = "end";
          return;
        }

        if (this.status == "end") {
          this.status = "result";
          return;
        }

        this.step += 1;
      },
      prev() {
        if (this.status == "end") {
          this.status = "play";
          this.step = this.lists.length - 1;

          return;
        } else if (this.status == "play") {
          if (this.step <= 0) {
            this.status = "start";
            this.step = 0;
            return;
          }
          this.step -= 1;
        }
      }
    }
  })
